<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookList_TFG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#1c2a45</item> <!-- Define el color principal de la barra superior -->

        <item name="colorPrimaryVariant">#1c2a45</item> <!-- Define el color de la barra de menú -->

        <item name="colorSurface">#5575B3</item> <!-- Define el color de fondo de los botones -->


        <item name="colorOnPrimary">@color/white</item> <!-- Define el color del texto en los botones -->
        <item name="android:textColor">@color/white</item>

        <!-- Color secundario de la marca. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Define el color secundario de la marca -->
        <item name="colorSecondaryVariant">@color/teal_200</item> <!-- Define la variante de color secundario -->
        <item name="colorOnSecondary">@color/black</item> <!-- Define el color del texto sobre el color secundario -->

        <!-- Color de la barra de estado. -->
        <item name="android:statusBarColor">#1c2a45</item> <!-- Define el color de la barra de estado del sistema -->

        <!-- Fondo -->
        <item name="android:windowBackground">@drawable/fondo_oscuro</item> <!-- Define el fondo de la ventana de la aplicación -->
    </style>
</resources>
