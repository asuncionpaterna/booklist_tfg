<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookList_TFG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/menu_claro</item> <!-- Color la barra superior -->
        <item name="colorPrimaryVariant">@color/menu_claro</item> <!-- Color de la barra de menú -->

        <item name="colorSurface">@color/fondo_btn_claro</item> <!-- Define el color de fondo de los botones -->

        <item name="colorOnPrimary">@color/white</item> <!--Color texto botones-->
        <item name="android:textColor">@color/black</item> <!--Color texto-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icono_anadir_claro </item> <!-- Color secundario de la marca -->
        <item name="colorSecondaryVariant">@color/teal_200 </item> <!-- Color secundario -->
        <item name="colorOnSecondary">@color/black</item> <!-- Color del texto sobre el color secundario -->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Color de la barra de estado del sistema -->

        <!--Fondo-->
        <item name="android:windowBackground">@drawable/fondo_dia </item> <!-- Fondo de la ventana de la aplicación -->
    </style>

    <style name="Theme.BookList_TFG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookList_TFG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookList_TFG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>