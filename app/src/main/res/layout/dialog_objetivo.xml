<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TituloPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_objetivo_lectura" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <com.exlibris_project.booklist_tfg.utils.HorizontalNumberPicker
            android:id="@+id/idHNPObjetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/idBtnGuardarObje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_guardar" />

</LinearLayout>
